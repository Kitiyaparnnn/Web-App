<h1 class="text-center">{{title}}</h1>
<form action='/api/users' method='post'>
    <div class="form-group">
        <label for='name'>Name</label>
        <input type="text" name='name' class='form-control'>
    </div>
    <div class="form-group">
        <label for='name'>Address</label>
        <input type="text" name='address' class='form-control'>
    </div>
    <div class="form-group">
        <label for='name'>Picture</label>
        <input type="text" name='picture' class='form-control'>
    </div>
    <div class="form-group">
        <label for='name'>Package</label>
        <input type="text" name='package' class='form-control'>
    </div>
    <br />
    <input type='submit' value="Add user" class='btn btn-success btn-block'>
</form>

<h4>Users</h4>
<ul class='list-group'>
{{#each users}}
<li class='list-group-item'>{{this.name}} : {{this.package}}</li>
{{/each}}
</ul>

<br />
<a href='/api/users' target="_blank" class='btn btn-secondary'>Visit API</a>